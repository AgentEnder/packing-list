    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite", "vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../state"
    },
    {
      "path": "../auth-state"
    },
    {
      "path": "../auth"
    },
    {
      "path": "../model"
    },
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
